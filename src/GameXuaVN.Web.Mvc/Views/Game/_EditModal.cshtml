@using GameXuaVN.Web.Models.Common.Modals
@using GameXuaVN.Web.Models.Games

@model CreateOrUpdateGameModel
@{
    Layout = null;
}
@await Html.PartialAsync("~/Views/Shared/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel(L("EditGame")))
<form name="GameEditForm" role="form" class="form-horizontal">
    <input type="hidden" name="Id" value="@Model.Id" />
    <div class="modal-body">
        <ul class="nav nav-tabs" role="tablist">
            <li class="nav-item">
                <a class="nav-link active" data-toggle="tab" role="tab" href="#edit-user-details">@L("GameDetails")</a>
            </li>

        </ul>
        <div class="tab-content mt-4">
            <div role="tabpanel" class="tab-pane container active" id="edit-game-details">

                <div class="form-group row required">
                    <label class="col-md-3 col-form-label" for="name">@L("Name")</label>
                    <div class="col-md-9">
                        <input id="name" type="text" class="form-control" name="Name" value="@Model.Name">
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-md-3 col-form-label">@L("Description")</label>
                    <div class="col-md-9">
                        <textarea class="form-control" name="Description" value="@Model.Description" rows="5"></textarea>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-md-3 col-form-label">@L("TotalLike")</label>
                    <div class="col-md-9">
                        <input type="number" class="form-control" value="@Model.TotalLike" name="TotalLike" min="0">
                    </div>
                </div>

                <!-- Tổng lượt không thích -->
                <div class="form-group row">
                    <label class="col-md-3 col-form-label">@L("TotalDislike")</label>
                    <div class="col-md-9">
                        <input type="number" class="form-control" value="@Model.TotalDislike" name="TotalDislike" min="0">
                    </div>
                </div>

                <!-- Ảnh thumbnail -->
                <div class="form-group row">
                    <label class="col-md-3 col-form-label">@L("Thumbnail")</label>
                    <div class="col-md-9">
                        <input type="file" class="form-control-file" name="Thumbnail" accept="image/*">
                    </div>
                </div>

                <!-- Dữ liệu ảnh -->
                <div class="form-group row">
                    <label class="col-md-3 col-form-label">@L("Data")</label>
                    <div class="col-md-9">
                        <input type="file" class="form-control-file" name="Data" accept="application/octet-stream">
                    </div>
                </div>

                <!-- ID danh mục -->
                <div class="form-group row required">
                    <label class="col-md-3 col-form-label">@L("CategoryId")</label>
                    <div class="col-md-9">
                        <select class="form-control">
                            <option value="1">NES</option>
                            <option value="2">PS1</option>
                        </select>
                    </div>
                </div>

            </div>

        </div>
    </div>
    @await Html.PartialAsync("~/Views/Shared/Modals/_ModalFooterWithSaveAndCancel.cshtml")
</form>

<script src="~/view-resources/Views/Games/_EditModal.js" asp-append-version="true"></script>
