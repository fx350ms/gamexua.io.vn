@using GameXuaVN.Web.Models.Games

@model PlayingGameViewModel
@{
    string siteUrl = "http://trochoixua.io.vn/";
    Layout = null;
}

<html>
@if (Model != null && Model.Data != null)
{
    <head>
        <!--HTML file auto generated using EmulatorJS codehelper-->
        <style>
            body, html {
                margin: 0;
                padding: 0;
            }
        </style>
        <title>Chơi game @Model.Data.Name online, miễn phí</title>
        <meta name="keywords" content="Contra, Super Mario, Tank, game NES, game cổ điển, chơi game trực tuyến">
        <meta name="description" content="Chơi game cổ điển như Contra, Super Mario, và Tank miễn phí trực tuyến. Khám phá những game NES huyền thoại và sống lại ký ức tuổi thơ của bạn!">
        <meta property="og:title" content="@Model.Data.Name">
        <meta property="og:description" content="@Model.Data.Description">
      
        <meta property="og:image" content="@(siteUrl)img/contra-wallpaper.jpg">
        <meta property="og:site_name" content="trochoixua.io.vn" />
        <meta property="og:type" content="website">
        <meta property="og:url" content="@siteUrl" />


        <meta name="robots" content="index, follow">

    </head>
    <body>
        <div style="width:100%;height:100%;max-width:100%; min-height:720px">
            <div id="game"></div>
        </div>
        <script>
            EJS_player = "#game";
            EJS_core = "nes";
            EJS_gameName = "@Model.Data.Name";
            EJS_color = "#0064ff";
            EJS_startOnLoaded = true;
            EJS_pathtodata = "https://cdn.emulatorjs.org/stable/data/";
            EJS_gameUrl = "@Url.Action("GetFile", "Nes", new { id = Model.Id })"
        </script>
        <script src="https://cdn.emulatorjs.org/stable/data/loader.js"></script>
    </body>
}
</html>