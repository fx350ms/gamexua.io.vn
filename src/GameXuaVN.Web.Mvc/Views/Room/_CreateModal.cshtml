﻿@using GameXuaVN.Web.Models.Common.Modals
@using GameXuaVN.Web.Models.Games
@using GameXuaVN.Rooms.Dto

@model CreateRoomDto
@{
    Layout = null;
}

<div class="modal fade" id="RoomCreateModal" tabindex="-1" role="dialog" aria-labelledby="RoomCreateModalLabel" data-backdrop="static">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            @await Html.PartialAsync("~/Views/Shared/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel(L("CreateNewRoom")))
            <form name="roomCreateForm" role="form" class="form-horizontal" enctype="multipart/form-data">
                <div class="modal-body">
                    <ul class="nav nav-tabs" role="tablist">
                        <li class="nav-item">
                            <a class="nav-link active" data-toggle="tab" role="tab" href="#create-room-details">@L("Details")</a>
                        </li>
                    </ul>
                    <div class="tab-content mt-4">
                        <div role="tabpanel" class="tab-pane container active" id="create-room-details">

                            <div class="form-group row required">
                                <label class="col-md-3 col-form-label">@L("RoomName")</label>
                                <div class="col-md-9">
                                    <input type="text" class="form-control" name="RoomName" required maxlength="100" placeholder="@L("PlaceRoomName")">
                                </div>
                            </div>
                            <div class="form-group row required">
                                <label class="col-md-3 col-form-label">@L("GameId")</label>
                                <div class="col-md-9">
                                    <input type="text" class="form-control" name="GameId" required maxlength="100" placeholder="@L("PlaceGameId")">
                                </div>
                            </div>
                            <div class="form-group row required">
                                <label class="col-md-3 col-form-label">@L("CategoryId")</label>
                                <div class="col-md-9">
                                    <select class="form-control" name="CategoryId" required>
                                        <option value="1">NES</option>
                                    </select>
                                </div>
                            </div>
                            <div class="form-group row required">
                                <label class="col-md-3 col-form-label">@L("PasswordRoom")</label>
                                <div class="col-md-9">
                                    <input type="text" class="form-control" name="Password" required maxlength="100">
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
                @await Html.PartialAsync("~/Views/Shared/Modals/_ModalFooterWithSaveAndCancel.cshtml")
            </form>
        </div>
    </div>
</div>